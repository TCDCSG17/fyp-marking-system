<p id="notice"><%= notice %></p>

<div class="header">
  <h1>Students</h1>
</div>

<div class="container">
      <h3> <%= link_to 'Add Student', new_student_path, class:"btn btn-warning" %> </h3>
  <table>
    <thead>
      <tr>
        <th>Student Number</th>
        <th>Project Title</th>
        <th>Project PDF</th>      
        <th>Reader 1</th>
        <th>Reader 2</th>
        <th>Reader 3</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.StudentNumber %></td>
          <td><%= student.ProjectTitle %></td>
          <td><%= link_to 'PDF', student_path(student.document, :format => :pdf) %></td>
          <td><%= button_tag student.Reader1, class:"btn-xs btn-primary" %></td>
          <td><%= button_tag student.Reader2, class:"btn-xs btn-primary" %></td>
          <td><%= student.Reader3 %></td>
         
          <td><%= link_to 'Edit', edit_student_path(student), class:"btn-xs btn-success" %></td>
          <td><%= link_to 'Delete', student, class:"btn-xs btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>