<p id="notice"><%= notice %></p>

  <h1>Marks</h1>
  <% if @student.marks.first %>
  <p>
  <br>
  <h2>First mark</h2>
  <h3>Introduction</h3><br>
  <p>Comment: <%= @student.marks.first.input1 %></p>
  <p>Weight: <%= @student.marks.first.weight1 %></p>
  <p>Mark: <%= @student.marks.first.mark1%></p>
  <h3>Main</h3><br>
  <p>Comment: <%= @student.marks.first.input2 %></p>
  <p>Weight: <%= @student.marks.first.weight2 %></p>
  <p>Mark: <%= @student.marks.first.mark2%></p>
  <h3>Conclusion</h3><br>
  <p>Comment: <%= @student.marks.first.input3 %></p>
  <p>Weight: <%= @student.marks.first.weight3 %></p>
  <p>Mark: <%= @student.marks.first.mark3%></p>
